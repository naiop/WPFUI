                        <TextBlock Margin="10,10" Text="进度条"></TextBlock>
                        <ProgressBar  
                            Style="{DynamicResource ProgressBar1}"
                            Margin="10,20" 
                            Name="progressBar1"                         
                            Height="15" Width="150"/>
                        <Button 
                            Style="{DynamicResource ButtonStyle1}"
					        VerticalAlignment="Bottom"
